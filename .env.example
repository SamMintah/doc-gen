# OpenAI API Configuration
# Required: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: OpenAI model to use (default: gpt-4)
# Available options: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4

# Optional: Maximum tokens per request (default: 4000)
OPENAI_MAX_TOKENS=4000

# Optional: Temperature for AI responses (0.0-1.0, default: 0.3)
# Lower values = more deterministic, higher values = more creative
OPENAI_TEMPERATURE=0.3

# Default Configuration Values
# Optional: Default output file path
DEFAULT_OUTPUT_FILE=./docs/api-documentation.md

# Optional: Default request timeout in milliseconds (default: 30000)
DEFAULT_TIMEOUT=30000

# Optional: Default rate limit delay between requests in milliseconds (default: 1000)
DEFAULT_RATE_LIMIT_DELAY=1000

# Debugging and Development
# Optional: Enable debug logging (true/false, default: false)
DEBUG=false

# Optional: Enable verbose HTTP request logging (true/false, default: false)
DEBUG_HTTP=false

# Optional: Enable AI prompt debugging (true/false, default: false)
DEBUG_AI_PROMPTS=false

# Optional: Log level (error, warn, info, debug, default: info)
LOG_LEVEL=info

# Optional: Disable colored console output (true/false, default: false)
NO_COLOR=false

# API Scanning Configuration
# Optional: Maximum number of concurrent requests during scanning (default: 5)
MAX_CONCURRENT_REQUESTS=5

# Optional: Maximum number of endpoints to scan (default: 100)
MAX_ENDPOINTS_SCAN=100

# Optional: User agent string for HTTP requests
USER_AGENT=api-doc-generator/1.0.0

# Optional: Default authentication type (none, bearer, apiKey, basic)
DEFAULT_AUTH_TYPE=none